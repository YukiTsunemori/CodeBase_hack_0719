<%# sessions/new.html.erb の修正案 %>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
  <main class="form-signin w-100 m-auto text-center">
    <%# ↓ form_forがformタグを生成するので、外側のformタグは削除 %>
    <%= image_tag "image.png", class: "mb-4", alt: "", width: 72, height: 57, loading: "lazy" %>
    <h1 class="h3 mb-3 fw-normal">Sign in</h1>

    <%# Devise用の通知とアラートを表示 %>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p> <%# Bootstrapのアラートクラスを追加 %>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating">
        <%# `id`と`label`の`for`が自動的に正しく設定される %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
        <%= f.label :email, "Email address", for: "floatingInput" %>
      </div>

      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "floatingPassword", placeholder: "Password" %>
        <%= f.label :password, for: "floatingPassword" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check text-start my-3">
          <%# `f.check_box` を使用する %>
          <%= f.check_box :remember_me, class: "form-check-input", id: "flexCheckDefault" %>
          <%= f.label :remember_me, class: "form-check-label", for: "flexCheckDefault" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign in", class: "btn btn-primary w-100 py-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </main>
</body>