<% if user_signed_in? %>
<div class="card text-center">
  <div class="card-body">
    <p class="card-text">
      <%= simple_form_for @post do |f| %>
        <%= f.textarea :text, placeholder: "今日は何をつぶやきますか？", class: "form-control" %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.button :submit, "Submit", class: "btn btn-primary" %>
      <% end %>
    </p>
  </div>
</div>
<% else %>
<div class="card text-center">
  <div class="card-body">
    <h1>さぁ、登録してみんなで投稿しよう！</h1>
  </div>
    <%= link_to new_user_registration_path, class: "btn btn-primary" do %>
    <h5>Sign Upはこちら</h5>
    <% end %>
    <%= link_to new_user_session_path, class: "btn btn-warning" do %>
    <h5>Sign Inはこちら</h5>
    <% end %>

</div>
<% end %>

<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>
<% if alert %>
  <div class="alert alert-danger"><%= alert %></div>
<% end %>

<% if @posts.nil? %>
  <p class="card-text">投稿はまだありません。</p>
<% else %>
  <div class="card text-center">
    <% @posts.each do |post| %>
    <%= link_to post_path(post), class: "card-body" do %>
      <div class="card-body">
        <p class="card-text"><%= post.text %></p>
      </div>
      <div class="card-footer text-body-secondary">
        <%= post.id %>
    <% end %>
      </div>
    <% end %>
  </div>
<% end %>
