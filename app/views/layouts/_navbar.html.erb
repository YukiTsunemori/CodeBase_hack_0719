<header class="p-3 text-bg-dark">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
          <use xlink:href="#bootstrap"></use>
        </svg>
      </a>
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Home", root_path, class: "nav-link px-2 text-white" %></li>
        <li><%= link_to "Profile", edit_user_registration_path, class: "nav-link px-2 text-white" %></li>
      </ul>
      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
        <input type="search" class="form-control form-control-dark text-bg-white" placeholder="Search..." aria-label="Search">
      </form>
        <% if current_user.nil? %>
        <div class="text-end">
            <%= link_to "Sign-in", new_user_session_path, class: "btn btn-outline-light me-2" %>
            <%= link_to "Sign-up", new_user_registration_path, class: "btn btn-warning" %>
        </div>
        <% else %> 
            <%= link_to "Sign-out", destroy_user_session_path, data: { turbo_method: :delete },
            class: "btn btn-warning" %>
        <% end %>
    </div>
  </div>
</header>